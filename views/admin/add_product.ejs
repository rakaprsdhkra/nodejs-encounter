<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Form Add Product</h3>
  </div>
  
  <form role="form" method="post" action="/ecommerce/admin/add_product" enctype="multipart/form-data">
    <div class="box-body">
      <div class="form-group">
        <label for="nama_produk">Nama Produk</label>
        <input type="text" class="form-control" name="nama_produk" placeholder="Masukan Nama Produk" required />
      </div>
      <div class="form-group">
        <label for="harga_produk">Harga Produk</label>
        <input type="number" class="form-control" name="harga_product" placeholder="Masukan Harga" required />
      </div>
      <div class="form-group">
        <label>Textarea</label>
        <textarea class="form-control" rows="3" name="des_product" placeholder="Masukan Deskripsi" required></textarea>
      </div>
      <div class="form-group">
        <label for="exampleInputFile">Image Upload</label>
        <input type="file" name="image" required>
        <p class="help-block">Please choose an image!</p>
      </div>
    </div>
    <div class="box-footer">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>