<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Form Edit Product</h3>
  </div>

  <%
    if (data.length) {
      for (var i=0; i < data.length; i++) {
  %>
  
  <form role="form" method="post" action="/ecommerce/admin/edit_product/<%= data[i].id_product %>" enctype="multipart/form-data">
    <div class="box-body">
      <div class="form-group">
        <label for="nama_produk">Nama Produk</label>
        <input type="text" class="form-control" name="nama_produk" placeholder="Masukan Nama Produk" value="<%= data[i].nama_produk %>" required/>
      </div>
      <div class="form-group">
        <label for="harga_produk">Harga Produk</label>
        <input type="number" class="form-control" name="harga_product" placeholder="Masukan Harga" value="<%= data[i].harga_product %>" required/>
      </div>
      <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" rows="3" name="des_product" required><%= data[i].des_product %></textarea>
      </div>
      <img src="/public/images/<%= data[i].gambar_produk %>" width="200" height="150"/>
      <div class="form-group">                  
        <label for="nama_produk">Image Upload</label>                  
        <input type="file" name="image"/>
        <input type="hidden" class="form-control" name="image_old" value="<%= data[i].gambar_produk %>"/>
        <p class="help-block">Please choose an image!</p>
      </div>
    </div>
    <div class="box-footer">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>

  <%
      }
    }
  %>  